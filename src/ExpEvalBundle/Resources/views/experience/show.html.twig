{% extends 'base.html.twig' %}

{% block body %}
    <h1>Experience</h1>

    <table>
        <tbody>
            <tr>
                <th>Idexp</th>
                <td>{{ experience.idExp }}</td>
            </tr>
            <tr>
                <th>Descriptionexperience</th>
                <td>{{ experience.descriptionExperience }}</td>
            </tr>
            <tr>
                <th>Preuve</th>
                <td>{{ experience.preuve }}</td>
            </tr>
            <tr>
                <th>Dateexp</th>
                <td>{% if experience.dateExp %}{{ experience.dateExp|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('experience_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('experience_edit', { 'idExp': experience.idExp }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
