<script>
    $(document).ready(
        function() {
            $('#llllllll').click(
                function(){
                    $('#crit1').show();
                    $('#lab1').show();

                }

            );
            $('#crit1').keypress(
                function(){
                    $('#crit2').show();
                    $('#lab2').show();

                }

            );
            $('#crit2').keypress(
                function(){
                    $('#crit3').show();
                    $('#lab3').show();

                }

            );   $('#crit3').keypress(
                function(){
                    $('#crit4').show();
                    $('#lab4').show();

                }

            );   $('#crit4').keypress(
                function(){
                    $('#crit5').show();
                    $('#lab5').show();

                }

            );
            $('#crit5').keypress(
                function(){
                    $('.btn btn-danger square-btn-adjust').show();


                }

            );
        });

</script>




