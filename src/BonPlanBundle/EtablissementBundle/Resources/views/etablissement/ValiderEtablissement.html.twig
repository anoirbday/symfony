    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="{{ asset('assets/css/themify-icons.css') }}" rel="stylesheet">

</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-background-color="white" data-active-color="danger">

        <!--
            Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
            Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
        -->

        <div class="sidebar-wrapper">
            <div class="logo">
                <a href="http://www.creative-tim.com" class="simple-text">
BonPlan                </a>
            </div>

            <ul class="nav">
                <li class="active">
                    <a href="{{ path('bon_plan_accueilAdmin') }}">
                        <i class="ti-panel"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('annonce_indexback') }}">
                        <i class="ti-user"></i>
                        <p>Demande d'annonces</p>
                    </a>
                </li>
                <li>
                    <a href="{{  path('valider_Pub')  }}">
                        <i class="ti-view-list-alt"></i>
                        <p>Demandes Publicites</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('List_Admin') }}">
                        <i class="ti-text"></i>
                        <p>liste des événements</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('bon_plan_categorie') }}">
                        <i class="ti-pencil-alt2"></i>
                        <p>Demandes Categorie</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('bon_plan_etablissement6') }}">
                        <i class="ti-map"></i>
                        <p>Liste Etablissement</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('bon_plan_filAdmin') }}">
                        <i class="ti-bell"></i>
                        <p>Actualité</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('bon_plan_categorie4') }}">
                        <i class="backcornertop"></i>
                        <p>lister Categorie</p>
                    </a>
                </li>


            </ul>
        </div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default">

            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar bar1"></span>
                        <span class="icon-bar bar2"></span>
                        <span class="icon-bar bar3"></span>
                    </button>
                    <a class="navbar-brand" href="#">Dashboard</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><div style="color: black;
padding: 15px 50px 5px 50px;
float: right;
font-size: 16px;" class="username">
                                {{app.user.username}} &nbsp;
                                <a href="{{ path('fos_user_security_logout') }}" class="btn btn-danger square-btn-adjust">Logout</a>
                            </div></li>
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Notifications
                                <i class="ti-bell"></i></a>


                            <ul class="dropdown-menu">


                                <li><a href="#">Notification evenement en cours</a></li>
                                <li><a href="#">Notification evenement du jour</a></li>
                                <li> <a href="#">Notification nouveau produit</a></li>


                            </ul>
                        </li>
                        <li>
                            <a href="{{ path('bon_plan_etablissement11') }}">
                                <i class="ti-panel"></i>
                                <p>Statistiques</p>
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
            {% endblock %}
        </nav>

        {% block body %}
            <div class="content">
                <div class="row">

                    <div class="col-md-6">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Liste des catégories</h4>
                                <p class="category">Les critères d'évaluation pour chaque catégorie</p>
                            </div>
                            <div class="content">
                                <div id="chartPreferences" class="ct-chart ct-perfect-fourth">
                                    <table cellspacing="100px" border="simple" data-textAlign="center" align="center">
                                        <thead cellspacing="100px">
                                        <tr>
                                            <th>Nom catégorie</th>
                                            <th>Critères d'évaluation</th>
                                            <th>Modifier/Supprimer</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for categorie in categories %}
                                            {% if categorie.enabled %}
                                                <tr>
                                                    <td>{{ categorie.nomCategorie }}</td>
                                                    <td>

                                                        {% for critereEvaluation in critereEvaluations %}
                                                            <ul>
                                                                {% if critereEvaluation.getIdCategorie().idCategorie == categorie.idCategorie %}
                                                                    {{ critereEvaluation.nomCritereEvaluation }}
                                                                    <a href="{{ path('bon_plan_categorie6', { 'id': critereEvaluation.idCritere }) }}">Modifier ce critère</a>

                                                                {% endif %}
                                                            </ul>
                                                        {% endfor %}

                                                    </td>

                                                    <td>
                                                        <ul>
                                                            <li >
                                                                <a href="{{ path('bon_plan_categorie7', { 'id': categorie.idCategorie }) }}">Modifier catégorie</a>
                                                            </li>
                                                            <li>

                                                                <a href="{{ path('bon_plan_categorie5',{'id': categorie.idCategorie}) }}">Supprimer</a>

                                                            </li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                            {% endif %}
                                        {% endfor %}
                                        </tbody>
                                    </table>

                                </div>

                                <div class="footer">
                                    <div class="chart-legend">
                                        <i class="fa fa-circle text-warning"></i>  <a href="{{ path('bon_plan_categorie') }}">Liste des demandes de catégories</a>
                                    </div>
                                    <hr>
                                    <div class="stats">
                                        <i class="ti-timer"></i> Vérifiez vos catégories et vos critères
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card ">
                            <div class="header">
                                <h4 class="title">Modifer les critères d'évaluation</h4>
                                <p class="category">Changez les critères d'évaluation</p>
                            </div>
                            <div class="content">
                                <div id="chartActivity" class="ct-chart">

                                    {{ form_start(form) }}
                                    {{ form_widget(form) }}
                                    <input type="submit" class="btn btn-danger square-btn-adjust" value="Enregistrer" />
                                    {{ form_end(form) }}
                                </div>

                                <div class="footer">

                                    <hr>
                                    <div class="stats">
                                        <i class="ti-check"></i> Critère modifié
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        {% endblock %}
    </div>


    <footer class="footer">
        {% block footer %}
        <div class="container-fluid">
            <nav class="pull-left">
                <ul>

                    <li>
                        <a href="http://www.creative-tim.com">
BonPlan                        </a>
                    </li>
                    <li>
                        <a href="http://blog.creative-tim.com">
                            Blog
                        </a>
                    </li>
                    <li>
                        <a href="http://www.creative-tim.com/license">
                            Licenses
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="copyright pull-right">
                &copy; <script>document.write(new Date().getFullYear())</script>, made with <i class="fa fa-heart heart"></i> by <a href="http://www.creative-tim.com">Creative Tim</a>
            </div>
        </div>
    </footer>

</div>
</div>





</body>

